<% content_for :title, song.title %>
<%= form_with(model: song, local: true) do |form| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, id: :song_year %>
  </div>

  <div class="field">
    <%= form.label :rank %>
    <%= form.number_field :rank, id: :song_rank %>
  </div>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :song_title %>
  </div>

  <div class="field">
    <%= form.label :artist_id %><br />
    <%= form.collection_select :artist_id, Artist.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :nbr %>
    <%= form.number_field :nbr, id: :song_nbr %>
  </div>

  <div class="field">
    <%= form.label :will_upload %>
    <%= form.check_box :will_upload, id: :song_will_upload %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="field">
    <%= form.label :views %>
    <%= form.number_field :views, id: :song_views %>
  </div>
  
  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :code, id: :song_code %>
  </div>

  <div class="field">
    <%= form.label :mp3 %><br />
    <%= form.file_field :mp3 %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, id: :song_duration %>
  </div>



  <div class="field">
    <%= form.label :uploaded %>
    <%= form.check_box :uploaded, id: :song_uploaded %>
  </div>

  <div class="field">
    <%= form.label :playlist %>
    <%= form.check_box :playlist, id: :song_playlist %>
  </div>

  <div class="field">
    <%= form.label :publish_date %>
    <%= form.date_select :publish_date, order: [:day, :month, :year], :start_year => 2006, :end_year => 2019 %>
  </div>


<% end %>
