<% content_for :title, @artist.name %>
<h3><%= @artist.name %></h3>
    <!-- start of row -->
    <div class="row">
        <!-- start of loop -->
        <% @songs.each do |song| %>
            <!-- start of col -->
            <div class='col-xs-12 col-sm-6 col-md-4 col-lg-3'>
                <!-- start of card -->            
                <div class="card border-light">
                    <iframe <%= %[src=https://www.youtube.com/embed/#{song.code}] %> 
                        allowfullscreen allowtransparency allow="autoplay"></iframe>
                    <!-- start of card-body -->                            
                    <div class='card-body'>
                        <h5 class="card-title text-center mb-1"><%= song.title %></h5>
                    </div> 
                    <!-- end of card-body -->                            
                </div>
                <!-- end of card -->                            
            </div> 
            <!-- end of col -->
        <% end %> 
        <!-- end of loop -->
    </div>
    <!-- end of row -->
